# =============================================================================
# ADWS Environment Configuration — ThemeGPT v2.0
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit the .env file to version control.

# -----------------------------------------------------------------------------
# LLM Provider API Keys
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...

# -----------------------------------------------------------------------------
# Trinity Protocol — Model Versions
# -----------------------------------------------------------------------------
# These default to the latest tested versions. Override only if needed.
TRINITY_ARCHITECT_MODEL=claude-opus-4-6-20260205
TRINITY_CRITIC_MODEL=gpt-5.3-codex
TRINITY_ADVOCATE_MODEL=gemini-3.1-pro-preview

# -----------------------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------------------
GITHUB_TOKEN=ghp_...
GITHUB_REPO=Org-EthereaLogic/themegpt-v2.0
GITHUB_DEFAULT_BRANCH=main

# -----------------------------------------------------------------------------
# Bridge Server (for remote/n8n execution)
# -----------------------------------------------------------------------------
BRIDGE_AUTH_TOKEN=your-secure-token-here
BRIDGE_PORT=8080
WORKSPACE_PATH=/opt/adws/projects
BRIDGE_LOG_PATH=/opt/adws/logs

# -----------------------------------------------------------------------------
# Worktree Configuration
# -----------------------------------------------------------------------------
TREES_BASE=trees
AGENTS_BASE=agents
WORKTREE_MAX_AGE_HOURS=72
