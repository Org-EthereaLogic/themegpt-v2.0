{
  "name": "extension",
  "displayName": "ThemeGPT",
  "version": "2.0.1",
  "description": "The privacy-first ChatGPT theme manager. Customize appearances and track tokens locally.",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "@themegpt/shared": "workspace:*",
    "gpt-tokenizer": "^3.4.0",
    "ogl": "^1.0.11",
    "plasmo": "^0.90.5",
    "react": "19.2.4",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "0.1.33",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "^10.4.24",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "3.8.1",
    "tailwindcss": "^3",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "manifest": {
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*"
    ],
    "externally_connectable": {
      "matches": [
        "https://themegpt.ai/*",
        "https://*.themegpt.ai/*",
        "https://*.a.run.app/*"
      ]
    }
  }
}
