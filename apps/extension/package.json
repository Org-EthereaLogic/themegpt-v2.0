{
  "name": "extension",
  "displayName": "ThemeGPT",
  "version": "1.0.0",
  "description": "Custom themes for ChatGPT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "@themegpt/shared": "workspace:*",
    "gpt-tokenizer": "^3.4.0",
    "ogl": "^1.0.11",
    "plasmo": "^0.90.5",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/chrome": "0.1.32",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "3.7.4",
    "tailwindcss": "3.4.17",
    "typescript": "5.9.3",
    "vitest": "^4.0.16"
  },
  "manifest": {
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*"
    ],
    "externally_connectable": {
      "matches": [
        "https://themegpt.app/*",
        "https://*.themegpt.app/*"
      ]
    }
  }
}
