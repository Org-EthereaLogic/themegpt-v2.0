{
  "name": "themegpt-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter extension dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:extension": "pnpm --filter extension lint",
    "lint:web": "pnpm --filter web lint",
    "test": "pnpm -r test",
    "test:coverage": "pnpm --filter web test -- --coverage --coverage.reporter=lcov --coverage.reporter=text && pnpm --filter extension test -- --coverage --coverage.reporter=lcov --coverage.reporter=text",
    "clean": "pnpm -r clean",
    "preview:sync": "node apps/extension/tools/theme-preview/sync-themes.js"
  },
  "pnpm": {
    "overrides": {
      "msgpackr": "^1.11.5",
      "content-security-policy-parser": "^0.6.0",
      "svelte": "^5.53.0",
      "esbuild": "^0.25.0",
      "tsup": "^8.0.1",
      "preact": "^10.28.2",
      "fast-xml-parser": "^5.3.4",
      "minimatch": "^10.2.1",
      "ajv": "^6.14.0"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2025-56648"
      ]
    },
    "patchedDependencies": {
      "@parcel/reporter-dev-server@2.9.3": "patches/@parcel__reporter-dev-server@2.9.3.patch"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "google-auth-library": "^10.5.0",
    "puppeteer": "^24.37.5",
    "sharp": "^0.34.5",
    "vitest": "^4.0.15"
  }
}
