{
  "name": "themegpt-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter extension dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:extension": "pnpm --filter extension lint",
    "lint:web": "pnpm --filter web lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "pnpm": {
    "overrides": {
      "msgpackr": "^1.11.5",
      "content-security-policy-parser": "^0.6.0",
      "svelte": "^4.2.20",
      "esbuild": "^0.25.0",
      "tsup": "^8.0.1"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2025-56648"
      ]
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "puppeteer": "^24.32.1",
    "vitest": "^4.0.15"
  }
}
